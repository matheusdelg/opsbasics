<div class="list-group w-100 py-3">
	{{#client}}
	<div class="container list-group-item list-group-item-action">
		<div class="d-flex w-100 justify-content-between">
			<div class="mr-auto d-flex justify-content-around">
				<h5 class="mr-2">{{full_name}}</h5>
				<small>{{client_mail}}</small>					
			</div>
			<div class="d-flex">
				<a href="{{clientviewurl}}?id={{id}}" class="mx-2"
				data-toggle="tooltip" data-placement="top" title="{{tooltipview}}">
				   	<i class="fa fa-eye"></i>
				</a>
				<a href="{{clientediturl}}?id={{id}}" class="mx-2"
				data-toggle="tooltip" data-placement="top" title="{{tooltipedit}}">
				   	<i class="fa fa-pencil"></i>
				</a>
				<a href="{{clientviewurl}}?id={{id}}" class="mx-2"
				data-toggle="tooltip" data-placement="top" title="{{tooltipdelete}}">
					<i class="fa fa-trash"></i>
			 	</a>
			</div>
		</div>
	</div>
	{{/client}}
</div>
