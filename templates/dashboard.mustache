<div class="py-3 container">
	<h2>Bem vindo(a)!</h2>
	<p>{{plugindescription}}</p>
	<hr>
</div>

<div class="container py-3">
	<h4>Unidades CODE8734</h4>
	<div class="list-group w-100 py-3">
		{{#unity}}
		<div class="container list-group-item list-group-item-action">
			<div class="d-flex w-100 justify-content-between">
				<div class="mr-auto d-flex justify-content-around">
					<h5 class="mr-2">{{name}}</h5>
					<small>{{city}} - {{state}}</small>					
				</div>
				<div class="d-flex">
					<a alt="ver" href="{{unityviewurl}}?id={{id}}" class="mx-2"><i class="fa fa-eye"></i></a>
					<a alt="editar" href="{{unityediturl}}?id={{id}}" class="mx-2"><i class="fa fa-pencil"></i></a>
				</div>
			</div>
		</div>
		{{/unity}}
	</div>
</div>

<div class="container py-3">
	<h4>Implantação CODE8734</h4> 
	<div class="row justify-content-around">
		<div class="m-2 col card" style="min-height: 300px;">
			<div class="card-body d-flex flex-column align-content-end">
					<h3 class="mb-3">{{newclient}}</h3>
					<p>{{newclient_description}}</p>	
					<a href="{{clientediturl}}" class="mt-auto btn btn-primary w-100">{{newclient}}</a>
			</div>
		</div>
	
		<div class="m-2 col card" style="min-height: 300px;">
			<div class="card-body d-flex flex-column align-content-end">
					<h3 class="mb-3">{{newunity}}</h3>
					<p>{{newunity_description}}</p>	
					<a href="{{unityediturl}}" class="mt-auto btn btn-primary w-100">{{newunity}}</a>
			</div>
		</div>
	
		<div class="m-2 col card" style="min-height: 300px;">
			<div class="card-body d-flex flex-column align-content-end">
					<h3 class="mb-3">{{startimp}}</h3>
					<p>{{startimp_description}}</p>	
					<a href="{{startimpurl}}" class="mt-auto btn btn-primary w-100">{{startimp}}</a>
			</div>
		</div>
	</div>
</div>

